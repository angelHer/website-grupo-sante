<section class="process section section--alt" id="proceso">
  <div class="container">
    <div class="section-header animate-on-scroll">
      <span class="section-header__label">Cómo Agendar</span>
      <h2 class="section-header__title">Agenda tu estudio en 4 simples pasos</h2>
      <p class="section-header__description">
        Facilitamos el proceso para que obtengas tus resultados lo antes posible
      </p>
    </div>
    
    <div class="process__timeline stagger-children">
      {steps.map((step, index) => (
        <div class="process__step animate-on-scroll">
          <div class="process__step-number">{step.number}</div>
          <div class="process__step-connector" aria-hidden="true"></div>
          <div class="process__step-content">
            <div class="process__step-icon" set:html={step.icon} />
            <h3 class="process__step-title">{step.title}</h3>
            <p class="process__step-description">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="process__actions animate-on-scroll">
